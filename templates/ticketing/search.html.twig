{% extends 'base.html.twig' %}

{% block title %}Search Tickets - Il Grigio{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-8">
            <a href="{{ path('app_tickets') }}" class="inline-block mb-4">
                <img src="{{ asset('images/Logo-IlGrigioClown.png') }}" alt="Il Grigio" class="h-16 w-auto">
            </a>
            <h1 class="text-2xl font-bold text-gray-800 mb-2">Search Your Tickets</h1>
            <p class="text-gray-600">Enter your order ID to view your tickets and reservation details</p>
        </div>

        <!-- Search Form -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <form method="post" action="{{ path('app_tickets_search') }}" data-controller="ticket-search">
                <div class="mb-4">
                    <label for="order_id" class="block text-sm font-medium text-gray-700 mb-2">
                        Order ID <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <input type="text" 
                               id="order_id" 
                               name="order_id" 
                               value="{{ order_id }}"
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300"
                               placeholder="Enter your order ID (e.g., 12345)"
                               required
                               data-ticket-search-target="input">
                        <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                            <i class="fas fa-search text-gray-400"></i>
                        </div>
                    </div>
                    <p class="text-sm text-gray-500 mt-1">You can find your order ID in your confirmation email</p>
                </div>

                <button type="submit" 
                        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-300 disabled:opacity-50"
                        data-ticket-search-target="button">
                    <i class="fas fa-search mr-2"></i>Search Tickets
                </button>
            </form>
        </div>

        <!-- Flash Messages -->
        {% for message in app.flashes('error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md mb-4" role="alert">
                <i class="fas fa-exclamation-triangle mr-2"></i>{{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-md mb-4" role="alert">
                <i class="fas fa-check-circle mr-2"></i>{{ message }}
            </div>
        {% endfor %}

        <!-- Error Display -->
        {% if error %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md mb-4" role="alert">
                <i class="fas fa-exclamation-triangle mr-2"></i>{{ error }}
            </div>
        {% endif %}

        <!-- Ticket Results -->
        {% if ticket_info %}
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-xl font-semibold text-gray-800">
                        <i class="fas fa-ticket-alt mr-2"></i>{{ ticket_info.event_name ?? 'Your Tickets' }}
                    </h2>
                    <a href="{{ path('app_tickets_view', {orderId: order_id}) }}" 
                       class="bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-md transition duration-300">
                        <i class="fas fa-eye mr-2"></i>View Details
                    </a>
                </div>

                <div class="grid md:grid-cols-2 gap-4 mb-4">
                    <div>
                        <p class="text-sm text-gray-600">Order ID</p>
                        <p class="font-medium">{{ order_id }}</p>
                    </div>
                    {% if ticket_info.event_date %}
                    <div>
                        <p class="text-sm text-gray-600">Event Date</p>
                        <p class="font-medium">{{ ticket_info.event_date }}</p>
                    </div>
                    {% endif %}
                </div>

                {% if ticket_info.tickets %}
                    <div class="border-t pt-4">
                        <p class="text-sm text-gray-600 mb-2">Tickets Found</p>
                        <div class="flex items-center">
                            <span class="bg-blue-100 text-blue-800 text-sm font-medium px-2.5 py-0.5 rounded">
                                {{ ticket_info.tickets|length }} ticket{{ ticket_info.tickets|length > 1 ? 's' : '' }}
                            </span>
                        </div>
                    </div>
                {% endif %}

                <div class="flex gap-3 mt-6">
                    <a href="{{ path('app_pdf_download', {orderId: order_id}) }}" 
                       class="flex-1 bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md transition duration-300 text-center">
                        <i class="fas fa-file-pdf mr-2"></i>Download PDF
                    </a>
                    <a href="{{ path('app_tickets_view', {orderId: order_id}) }}" 
                       class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-300 text-center">
                        <i class="fas fa-eye mr-2"></i>View Details
                    </a>
                </div>
            </div>
        {% endif %}

        <!-- Back to Home -->
        <div class="text-center mt-8">
            <a href="{{ path('app_tickets') }}" 
               class="text-blue-600 hover:text-blue-800 transition duration-300">
                <i class="fas fa-arrow-left mr-2"></i>Back to Home
            </a>
        </div>
    </div>
</div>
{% endblock %}
